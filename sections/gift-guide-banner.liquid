{% comment %}
===========================================================
  GG Banner (Custom Section) — "The Gift Guide"
  - Built from scratch (no Dawn sections/components)
  - Editable texts from Customizer
  - Two images positioned like Figma:
      * Top image: 1440x390 (full width band)
      * Bottom image: 890x402 (bottom-right overlay)
  - Button animation (Shop Now / Choose Gift)
  - Mobile layout included
===========================================================
{% endcomment %}

<section
  class="gg-banner"
  id="gg-banner-{{ section.id }}"
  style="
    --gg-max-width: {{ section.settings.max_width }}px;
    --gg-pad-x: {{ section.settings.pad_x }}px;
    --gg-pad-y: {{ section.settings.pad_y }}px;
    --gg-top-h: {{ section.settings.top_image_height }}px;
    --gg-bottom-w: {{ section.settings.bottom_image_width }}px;
    --gg-bottom-h: {{ section.settings.bottom_image_height }}px;
  "
>
  {% comment %}
  =========================
    TOP BAR (brand / tagline / CTA)
  =========================
  {% endcomment %}
  <div class="gg-topbar">
    <div class="gg-topbar__inner">
      <div class="gg-topbar__left">
        <span class="gg-brand">{{ section.settings.brand }}</span>
      </div>

      <div class="gg-topbar__center">
        <span class="gg-tagline">{{ section.settings.tagline }}</span>
      </div>

      <div class="gg-topbar__right">
        <a class="gg-btn gg-btn--choose" href="{{ section.settings.choose_link }}">
          <span class="gg-btn__label">{{ section.settings.choose_text }}</span>
          <span class="gg-btn__arrow" aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </div>

  {% comment %}
  =========================
    WRAPPER (max width)
  =========================
  {% endcomment %}
  <div class="gg-wrap">
    {% comment %}
    =========================
      TOP IMAGE BAND (1440x390)
    =========================
    {% endcomment %}
    <div class="gg-topimage" aria-hidden="true">
      {% if section.settings.top_image != blank %}
        {{
          section.settings.top_image
          | image_url: width: 2400
          | image_tag:
            loading: 'lazy',
            decoding: 'async',
            class: 'gg-topimage__img',
            alt: section.settings.top_image_alt
        }}
      {% else %}
        <div class="gg-img__placeholder">Upload top image (1440×390)</div>
      {% endif %}
    </div>

    {% comment %}
    =========================
      LOWER GRID (left content + right image)
    =========================
    {% endcomment %}
    <div class="gg-lower">
      {% comment %} LEFT: CONTENT {% endcomment %}
      <div class="gg-content">
        <h1 class="gg-title">{{ section.settings.title }}</h1>

        <p class="gg-desc">
          {{ section.settings.description }}
        </p>

        <a class="gg-btn gg-btn--shop" href="{{ section.settings.shop_link }}">
          <span class="gg-btn__label">{{ section.settings.shop_text }}</span>
          <span class="gg-btn__arrow" aria-hidden="true">→</span>
        </a>
      </div>

      {% comment %} RIGHT: BOTTOM IMAGE (890x402) {% endcomment %}
      <div class="gg-bottomimage" aria-hidden="true">
        {% if section.settings.bottom_image != blank %}
          {{
            section.settings.bottom_image
            | image_url: width: 1800
            | image_tag:
              loading: 'lazy',
              decoding: 'async',
              class: 'gg-bottomimage__img',
              alt: section.settings.bottom_image_alt
          }}
        {% else %}
          <div class="gg-img__placeholder">Upload bottom image (890×402)</div>
        {% endif %}
      </div>
    </div>

    {% comment %}
    =========================
      FOOTER LINE
    =========================
    {% endcomment %}
    <div class="gg-footerline">
      {{ section.settings.footer_text }}
    </div>
  </div>
</section>


{% comment %}
===========================================================
  STYLES — scoped per section id
===========================================================
{% endcomment %}
<style>
  /* ===========================================================
     GG Banner — scoped by section id
  =========================================================== */

  /* =========================
     BASE
  ========================= */
  #gg-banner-{{ section.id }}{
    background: {{ section.settings.page_bg }};
    color: #000;
  }

  /* =========================
     TOP BAR
  ========================= */
  #gg-banner-{{ section.id }} .gg-topbar{
    padding: 14px 0;
  }

  #gg-banner-{{ section.id }} .gg-topbar__inner{
    max-width: var(--gg-max-width);
    margin: 0 auto;
    padding: 0 var(--gg-pad-x);
    display: grid;
    grid-template-columns: 1fr 1.2fr 1fr;
    align-items: center;
    gap: 16px;
  }

  #gg-banner-{{ section.id }} .gg-topbar__right{
    display: flex;
    justify-content: flex-end;
  }

  #gg-banner-{{ section.id }} .gg-brand{
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Helvetica Neue", Helvetica, sans-serif;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    font-size: 14px;
  }

  #gg-banner-{{ section.id }} .gg-tagline{
    display: inline-block;
    text-align: center;
    width: 100%;
    font-size: 12px;
    letter-spacing: 0.02em;
    color: #111;
  }

  /* =========================
     WRAP
  ========================= */
  #gg-banner-{{ section.id }} .gg-wrap{
    max-width: var(--gg-max-width);
    margin: 0 auto;
    padding: 0 var(--gg-pad-x);
    padding-bottom: calc(var(--gg-pad-y) + 10px);
  }

  /* =========================
     TOP IMAGE (band)
  ========================= */
  #gg-banner-{{ section.id }} .gg-topimage{
    height: var(--gg-top-h);
    width: 100%;
    overflow: hidden;
  }

  #gg-banner-{{ section.id }} .gg-topimage__img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* =========================
     LOWER GRID
     - left content
     - right image (890x402)
  ========================= */
  #gg-banner-{{ section.id }} .gg-lower{
    padding-top: 26px;
    display: grid;
    grid-template-columns: 1fr min(var(--gg-bottom-w), 62%);
    align-items: start;
    column-gap: 32px;
  }

  /* Right image */
  #gg-banner-{{ section.id }} .gg-bottomimage{
    width: 100%;
    height: var(--gg-bottom-h);
    overflow: hidden;
    justify-self: end;
    margin-top: -24px;
  }

  #gg-banner-{{ section.id }} .gg-bottomimage__img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Placeholder */
  #gg-banner-{{ section.id }} .gg-img__placeholder{
    width: 100%;
    height: 100%;
    background: #f2f2f2;
    border: 1px dashed #bbb;
    display: grid;
    place-items: center;
    font-size: 12px;
    color: #555;
  }

  /* =========================
     CONTENT (left)
  ========================= */
  #gg-banner-{{ section.id }} .gg-content{
    max-width: 520px;
  }

  #gg-banner-{{ section.id }} .gg-title{
    margin: 0 0 14px;
    font-family: ui-serif, Georgia, "Times New Roman", Times, serif;
    font-weight: 700;
    font-size: clamp(40px, 4.6vw, 64px);
    line-height: 1.02;
    letter-spacing: -0.01em;
  }

  #gg-banner-{{ section.id }} .gg-desc{
    margin: 0 0 22px;
    max-width: 460px;
    font-size: 14px;
    line-height: 1.55;
    color: #111;
  }

  /* =========================
     FOOTER LINE
  ========================= */
  #gg-banner-{{ section.id }} .gg-footerline{
    margin-top: 18px;
    font-size: 10px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #222;
    text-align: center;
    opacity: 0.9;
  }

  /* =========================
     BUTTONS (Figma-ish lift)
  ========================= */
  #gg-banner-{{ section.id }} .gg-btn{
    display: inline-flex;
    align-items: center;
    gap: 14px;
    text-decoration: none;
    border: 1px solid #000;
    font-size: 12px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 12px 18px;
    transition: transform 140ms ease, box-shadow 140ms ease, background 140ms ease, color 140ms ease;
    will-change: transform;
    user-select: none;
  }

  #gg-banner-{{ section.id }} .gg-btn--shop{
    background: #000;
    color: #fff;
  }

  #gg-banner-{{ section.id }} .gg-btn--choose{
    background: {{ section.settings.choose_bg }};
    color: #000;
  }

  #gg-banner-{{ section.id }} .gg-btn__arrow{
    display: inline-block;
    transform: translateX(0);
    transition: transform 140ms ease;
  }

  #gg-banner-{{ section.id }} .gg-btn:hover{
    transform: translateY(-2px);
    box-shadow: 0 10px 22px rgba(0,0,0,0.10);
  }

  #gg-banner-{{ section.id }} .gg-btn:hover .gg-btn__arrow{
    transform: translateX(4px);
  }

  #gg-banner-{{ section.id }} .gg-btn:active{
    transform: translateY(0);
    box-shadow: 0 6px 14px rgba(0,0,0,0.08);
  }

  /* =========================
     MOBILE
  ========================= */
  @media (max-width: 920px){
    #gg-banner-{{ section.id }} .gg-topbar__inner{
      grid-template-columns: 1fr;
      justify-items: start;
    }

    #gg-banner-{{ section.id }} .gg-topbar__center,
    #gg-banner-{{ section.id }} .gg-topbar__right{
      width: 100%;
    }

    #gg-banner-{{ section.id }} .gg-topbar__right{
      justify-content: flex-start;
    }

    #gg-banner-{{ section.id }} .gg-topimage{
      height: 320px;
    }

    #gg-banner-{{ section.id }} .gg-lower{
      grid-template-columns: 1fr;
      row-gap: 14px;
    }

    #gg-banner-{{ section.id }} .gg-bottomimage{
      height: 260px;
      width: 100%;
      justify-self: stretch;
    }

    #gg-banner-{{ section.id }} .gg-footerline{
      margin-top: 14px;
    }
  }
</style>


{% comment %}
===========================================================
  JS (vanilla) — minimal focus handling
===========================================================
{% endcomment %}
<script>
  // =========================
  // GG Banner - tiny enhancements (vanilla JS)
  // =========================
  (function () {
    var root = document.getElementById("gg-banner-{{ section.id }}");
    if (!root) return;

    var btns = root.querySelectorAll(".gg-btn");
    btns.forEach(function (btn) {
      btn.addEventListener("focus", function () {
        btn.style.outline = "2px solid rgba(0,0,0,0.35)";
        btn.style.outlineOffset = "3px";
      });
      btn.addEventListener("blur", function () {
        btn.style.outline = "none";
        btn.style.outlineOffset = "0";
      });
    });
  })();
</script>

