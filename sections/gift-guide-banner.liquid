{% comment %}
===========================================================
  GG Banner (Custom Section) — "The Gift Guide"
  - Built from scratch (no Dawn sections/components)
  - Editable texts from Customizer
  - Two images positioned like Figma:
      * Top image: 1440x390 (full width band)
      * Bottom image: 890x402 (bottom-right overlay)
  - Button animation (Shop Now / Choose Gift)
  - Mobile layout included
===========================================================
{% endcomment %}

<section
  class="gg-banner"
  id="gg-banner-{{ section.id }}"
  style="
    --gg-max-width: {{ section.settings.max_width }}px;
    --gg-pad-x: {{ section.settings.pad_x }}px;
    --gg-pad-y: {{ section.settings.pad_y }}px;
    --gg-top-h: {{ section.settings.top_image_height }}px;
    --gg-bottom-w: {{ section.settings.bottom_image_width }}px;
    --gg-bottom-h: {{ section.settings.bottom_image_height }}px;
    --gg-choose-bg: {{ section.settings.choose_bg }};
    --gg-page-bg: {{ section.settings.page_bg }};
  "
>
  {% comment %}
  ===========================================================
    TOP BAR (brand / tagline / CTA)
  ===========================================================
  {% endcomment %}
  <div class="gg-topbar">
    <div class="gg-topbar__inner">
      <div class="gg-topbar__left">
        <span class="gg-brand">{{ section.settings.brand }}</span>
      </div>

      <div class="gg-topbar__center">
        <span class="gg-tagline">{{ section.settings.tagline }}</span>
      </div>

      <div class="gg-topbar__right">
        <a class="gg-btn gg-btn--choose gg-btn--tilt" href="{{ section.settings.choose_link }}">
          <span class="gg-btn__label">{{ section.settings.choose_text }}</span>
          <span class="gg-btn__arrow" aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </div>

  {% comment %}
  ===========================================================
    HERO CANVAS (images + content)
  ===========================================================
  {% endcomment %}
  <div class="gg-canvas">
    <div class="gg-canvas__inner">

      {% comment %}
      -----------------------------------------------------------
        IMAGE LAYER (behind content)
      -----------------------------------------------------------
      {% endcomment %}
      <div class="gg-images" aria-hidden="true">
        {% comment %} TOP IMAGE (1440x390) {% endcomment %}
        <div class="gg-img gg-img--top">
          {% if section.settings.top_image != blank %}
            {{
              section.settings.top_image
              | image_url: width: 2400
              | image_tag:
                loading: 'lazy',
                decoding: 'async',
                class: 'gg-img__el',
                alt: section.settings.top_image_alt
            }}
          {% else %}
            <div class="gg-img__placeholder">Upload top image (1440×390)</div>
          {% endif %}
        </div>

        {% comment %} BOTTOM IMAGE (890x402) {% endcomment %}
        <div class="gg-img gg-img--bottom">
          {% if section.settings.bottom_image != blank %}
            {{
              section.settings.bottom_image
              | image_url: width: 1800
              | image_tag:
                loading: 'lazy',
                decoding: 'async',
                class: 'gg-img__el',
                alt: section.settings.bottom_image_alt
            }}
          {% else %}
            <div class="gg-img__placeholder">Upload bottom image (890×402)</div>
          {% endif %}
        </div>
      </div>

      {% comment %}
      -----------------------------------------------------------
        CONTENT LAYER (left)
      -----------------------------------------------------------
      {% endcomment %}
      <div class="gg-content">
        <h1 class="gg-title">{{ section.settings.title }}</h1>

        <p class="gg-desc">
          {{ section.settings.description }}
        </p>

        <a class="gg-btn gg-btn--shop gg-btn--tilt" href="{{ section.settings.shop_link }}">
          <span class="gg-btn__label">{{ section.settings.shop_text }}</span>
          <span class="gg-btn__arrow" aria-hidden="true">→</span>
        </a>
      </div>

      {% comment %}
      -----------------------------------------------------------
        FOOTER LINE (bottom text)
      -----------------------------------------------------------
      {% endcomment %}
      <div class="gg-footerline">
        {{ section.settings.footer_text }}
      </div>

    </div>
  </div>
</section>

{% comment %}
===========================================================
  STYLES — scoped per section id
===========================================================
{% endcomment %}
<style>
  /* ===========================================================
     BASE WRAPPER
  =========================================================== */
  #gg-banner-{{ section.id }}{
    background: #f5f6f7; /* REQUIRED */
    color: #000;
  }

  /* ===========================================================
     TOP BAR
  =========================================================== */
  #gg-banner-{{ section.id }} .gg-topbar{
    padding: 14px 0;
    background: #f5f6f7; /* REQUIRED */
  }

  #gg-banner-{{ section.id }} .gg-topbar__inner{
    max-width: var(--gg-max-width);
    margin: 0 auto;
    padding: 0 var(--gg-pad-x);
    display: grid;
    grid-template-columns: 1fr 1.2fr 1fr;
    align-items: center;
    gap: 16px;
  }

  #gg-banner-{{ section.id }} .gg-brand{
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Helvetica Neue", Helvetica, sans-serif;
    font-weight: 600;
    letter-spacing: .04em;
    text-transform: uppercase;
    font-size: 14px;
  }

  #gg-banner-{{ section.id }} .gg-tagline{
    display: inline-block;
    width: 100%;
    text-align: center;
    font-size: 12px;
    letter-spacing: .02em;
    color: #111;
  }

  #gg-banner-{{ section.id }} .gg-topbar__right{
    display: flex;
    justify-content: flex-end;
  }

  /* ===========================================================
     CANVAS WRAPPER
  =========================================================== */
  #gg-banner-{{ section.id }} .gg-canvas{
    background: #f5f6f7; /* REQUIRED */
    padding: var(--gg-pad-y) 0 calc(var(--gg-pad-y) + 18px);
    position: relative;
  }

  #gg-banner-{{ section.id }} .gg-canvas__inner{
    max-width: var(--gg-max-width);
    margin: 0 auto;
    padding: 0 var(--gg-pad-x);  /* FIX: restore horizontal padding */
    position: relative;

    /* Reserve real space for footer so it doesn't overlap */
    padding-bottom: 44px;

    /* Enough height for top band + overlay + footer reserved space */
    min-height: calc(var(--gg-top-h) + 26px + var(--gg-bottom-h) + 44px);
  }

  /* ===========================================================
     IMAGE LAYER
  =========================================================== */
  #gg-banner-{{ section.id }} .gg-images{
    position: relative;
    width: 100%;
    z-index: 1; /* behind content */
  }

  /* TOP IMAGE: band across the top */
  #gg-banner-{{ section.id }} .gg-img--top{
    width: 100%;
    height: var(--gg-top-h);
    overflow: hidden;
  }

  #gg-banner-{{ section.id }} .gg-img--top .gg-img__el{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* BOTTOM IMAGE: bottom-right overlay (like Figma) */
  #gg-banner-{{ section.id }} .gg-img--bottom{
    position: absolute;
    right: 0;
    top: calc(var(--gg-top-h) + 26px);

    width: min(var(--gg-bottom-w), 62%);
    height: var(--gg-bottom-h);
    overflow: hidden;
    pointer-events: none;
  }

  #gg-banner-{{ section.id }} .gg-img--bottom .gg-img__el{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #gg-banner-{{ section.id }} .gg-img__placeholder{
    width: 100%;
    height: 100%;
    background: #f2f2f2;
    border: 1px dashed #bbb;
    display: grid;
    place-items: center;
    font-size: 12px;
    color: #555;
  }

  /* ===========================================================
     CONTENT (left)
  =========================================================== */
  #gg-banner-{{ section.id }} .gg-content{
    position: absolute;
    left: var(--gg-pad-x);
    top: calc(var(--gg-top-h) + 26px);
    max-width: 520px;
    z-index: 2; /* above images */
  }

  #gg-banner-{{ section.id }} .gg-title{
    margin: 0 0 14px;
    font-family: ui-serif, Georgia, "Times New Roman", Times, serif;
    font-weight: 700;
    font-size: clamp(40px, 4.6vw, 64px);
    line-height: 1.02;
    letter-spacing: -0.01em;
  }

  #gg-banner-{{ section.id }} .gg-desc{
    margin: 0 0 22px;
    max-width: 460px;
    font-size: 14px;
    line-height: 1.55;
    color: #111;
  }

  /* ===========================================================
     FOOTER LINE
     - stays at the bottom of the INNER container
     - band background so it is always readable
  =========================================================== */
  #gg-banner-{{ section.id }} .gg-footerline{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 10px;

    width: 100%;
    padding: 8px 12px;
    text-align: center;

    font-size: 10px;
    letter-spacing: .12em;
    text-transform: uppercase;
    color: #111;
    opacity: .9;
    z-index: 2;
    pointer-events: none;

    background: #f5f6f7; /* REQUIRED */
  }

  /* ===========================================================
     BUTTONS (tilt + shadow + hover)
  =========================================================== */
  #gg-banner-{{ section.id }} .gg-btn{
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 14px;
    text-decoration: none;
    border: 1px solid #000;
    font-size: 12px;
    letter-spacing: .06em;
    text-transform: uppercase;
    padding: 12px 18px;
    transition: transform 140ms ease, box-shadow 140ms ease, background 140ms ease, color 140ms ease;
    will-change: transform;
    user-select: none;
  }

  /* “tilt” look */
  #gg-banner-{{ section.id }} .gg-btn--tilt{
    transform: skewX(-10deg);
    box-shadow: 8px 10px 0 rgba(0,0,0,0.18);
  }
  #gg-banner-{{ section.id }} .gg-btn--tilt > *{
    transform: skewX(10deg); /* un-skew label/arrow */
  }

  /* Shop button (black) */
  #gg-banner-{{ section.id }} .gg-btn--shop{
    background: #000;
    color: #fff;
  }

  /* Choose button (yellow) */
  #gg-banner-{{ section.id }} .gg-btn--choose{
    background: var(--gg-choose-bg);
    color: #000;
  }

  /* Arrow micro-move */
  #gg-banner-{{ section.id }} .gg-btn__arrow{
    display: inline-block;
    transform: translateX(0);
    transition: transform 140ms ease;
  }

  /* Hover animation: lift + arrow slide */
  #gg-banner-{{ section.id }} .gg-btn:hover{
    transform: skewX(-10deg) translateY(-2px);
    box-shadow: 10px 14px 0 rgba(0,0,0,0.16);
  }
  #gg-banner-{{ section.id }} .gg-btn:hover .gg-btn__arrow{
    transform: translateX(4px);
  }

  /* Active: press */
  #gg-banner-{{ section.id }} .gg-btn:active{
    transform: skewX(-10deg) translateY(0);
    box-shadow: 6px 8px 0 rgba(0,0,0,0.14);
  }

  /* ===========================================================
     MOBILE
  =========================================================== */
  @media (max-width: 920px){
    #gg-banner-{{ section.id }} .gg-topbar__inner{
      grid-template-columns: 1fr;
      justify-items: start;
    }

    #gg-banner-{{ section.id }} .gg-topbar__center,
    #gg-banner-{{ section.id }} .gg-topbar__right{
      width: 100%;
    }

    #gg-banner-{{ section.id }} .gg-topbar__right{
      justify-content: flex-start;
    }

    #gg-banner-{{ section.id }} .gg-canvas__inner{
      min-height: auto;
      padding: 0 16px;
      padding-bottom: 16px;
    }

    /* Keep the band visible on mobile */
    #gg-banner-{{ section.id }} .gg-img--top{
      height: 320px;
    }

    /* Bottom image becomes stacked */
    #gg-banner-{{ section.id }} .gg-img--bottom{
      position: relative;
      right: auto;
      bottom: auto;
      top: auto;
      width: 100%;
      height: 260px;
      margin-top: 14px;
    }

    /* Content becomes flow */
    #gg-banner-{{ section.id }} .gg-content{
      position: relative;
      left: auto;
      top: auto;
      margin-top: 18px;
      max-width: 560px;
    }

    /* Footer becomes flow on mobile */
    #gg-banner-{{ section.id }} .gg-footerline{
      position: relative;
      left: auto;
      transform: none;
      bottom: auto;
      margin-top: 14px;
      background: transparent;
      padding: 0 12px 10px;
    }
  }
</style>

{% comment %}
===========================================================
  JS (vanilla) — minimal focus handling
===========================================================
{% endcomment %}
<script>
  // =========================
  // GG Banner - tiny enhancements (vanilla JS)
  // =========================
  (function () {
    var root = document.getElementById("gg-banner-{{ section.id }}");
    if (!root) return;

    var btns = root.querySelectorAll(".gg-btn");
    btns.forEach(function (btn) {
      btn.addEventListener("focus", function () {
        btn.style.outline = "2px solid rgba(0,0,0,0.35)";
        btn.style.outlineOffset = "3px";
      });
      btn.addEventListener("blur", function () {
        btn.style.outline = "none";
        btn.style.outlineOffset = "0";
      });
    });
  })();
</script>

